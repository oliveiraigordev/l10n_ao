<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="report_cash_flow" model="ir.actions.report">
            <field name="name">Fluxo de Caixa</field>
            <field name="model">treasury.cash.flow.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">treasury_cash_flow_ao.report_cash_flow_pdf</field>
            <field name="report_file">treasury_cash_flow_ao.report_cash_flow</field>
            <field name="print_report_name">'Fluxo de Tesouraria - %s' % (object.journal_id.name)</field>
            <field name="binding_type">report</field>
        </record>

         <!--  o Record para o fluxo de caixa em excel -->
  <record id="action_cashflow_xlsx" model="ir.actions.report">
    <field name="name">Fluxo de caixa  XLSX</field>
    <field name="model">treasury.cash.flow.report</field>
    <field name="report_type">xlsx</field>
    <field name="report_name">treasury_cash_flow_ao.account_cashflow_xlsx</field>
    <field name="print_report_name">'Fluxo de Tesouraria - %s' % (object.journal_id.name)</field>
    <field name="binding_model_id" ref="treasury_cash_flow_ao.model_treasury_cash_flow_report"/>
    <field name="binding_type">report</field>
  </record>

        <template id="report_cash_flow_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="data" t-value="o.get_cash_flow_data()"/>
                    <t t-call="web.basic_layout">
                        <!-- Cabeçalho -->
                        <div class="header" style="color: #0B74CE">
                            <div class="row b_color">
                                <div class="col-8">
                                    <b><span class="text-left" t-field="res_company.name"/></b>
                                </div>
                                <div class="col-4">
                                    <ul class="list-inline text-right">
                                        <span t-out="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                        |
                                        Pag. <span class="page"/>/<span class="topage"/>
                                    </ul>
                                </div>
                            </div>
                            <div style="text-align:center;background-color:#0B74CE;height:5px;">

                            </div>
                            <div class="row mt16">
                                <div class="col-6">
                                    <div align="left">
                                        <b class="b_color">FLUXO DE TESOURARIA</b><br/>
                                        (<span t-field="o.start_date"/> até <span t-field="o.end_date"/>)
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div style="margin-left:150px;"><b class="b_color">Valores Expressos em <span t-out="res_company.currency_id.symbol"/></b></div>
                                </div>
                            </div>
                        </div>

                        <!-- Conteúdo -->
                        <div class="page">
                            <style type="text/css">
                                * {
                                padding-bottom: 0 !important; padding-top: 0 !important;
                                margin-bottom: 0 !important; margin-top:0 !important;
                                font-size: 12px !important;
                                }
                                hr {
                                display: block; height: 1px;
                                border: 0; border-top: 3px solid black;
                                margin: 0; padding: 0;
                                }
                                .b_color{
                                color: #0B74CE;
                                }

                                table {
                                border-spacing: 3px;
                                border-top: 3px solid black;
                                border-collapse:collapse;
                                }

                                td {
                                border-bottom:0 !important;
                                border-top: 1px solid #B2BABB !important;
                                }

                                th {
                                border-top:0 !important;
                                border-bottom: 1px solid #B2BABB !important;
                                }

                                table, tr, th, td {
                                border-collapse: separate;
                                padding:0px !important;
                                }

                                .border_top_th{
                                border-top: 1px solid black !important;
                                }
                            </style>

                            <div class="row">
                                <div class="col-8 mb-1">
                                    <b><span style="font-size: 18px !important;" t-out="data['journal_name']"/></b>
                                </div>
                                <div class="col-4 text-right">
                                    <b><span style="color:green">Original</span></b>
                                </div>
                            </div>

                            <!-- Resumo -->
                            <table class="table table-sm o_main_table" name="box_info_table">
                                <thead>
                                    <tr>
                                        <th><span>Ref</span></th>
                                        <th><span>Qtd. Movimentos</span></th>
                                        <th class="text-right"><span>Saldo Inicial</span></th>
                                        <!--                                        <th class="text-right"><span>Recebimentos</span></th>-->
                                        <!--                                        <th class="text-right"><span>Pagamentos</span></th>-->
                                        <th class="text-right"><span>Saldo Final</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center"><span t-out="data['journal_name']"/></td>
                                        <td class="text-center"><span t-out="data['movement_count']"/></td>
                                        <td class="text-center"><span t-out="o.amount_format(data['start_balance'])"/></td>
                                        <td class="text-center"><span t-out="o.amount_format(data['end_balance'])"/></td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Detalhes -->
                            <br/>
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th colspan="6" class="text-center" style="border-bottom: 1px solid #B2BABB !important;"><span>DETALHES</span></th>
                                    </tr>
                                    <tr style="font-size: 12px; font-weight: bold;">
                                        <th><b>Data</b></th>
                                        <th><b>Documento</b></th>
                                        <th><b>Descrição</b></th>
                                        <th class="text-right"><b>Entrada</b></th>
                                        <th class="text-right"><b>Saída</b></th>
                                        <th class="text-right"><b>Saldo</b></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="data['lines']" t-as="line">
                                        <td class="text-center"><span t-out="line['date'].strftime('%d-%m-%Y')"/></td>
                                        <td class="text-center"><span t-out="line['description']"/></td>
                                        <td class="text-center"><span t-out="line.get('memorando')"/></td>
                                        <td class="text-end"><span t-out="o.amount_format(line['debit'])"/></td>
                                        <td class="text-end"><span t-out="o.amount_format(line['credit'])"/></td>
                                        <td class="text-end"><span t-out="o.amount_format(line['balance'])"/></td>
                                    </tr>
                                </tbody>
                            </table>
                            <br></br>
                            <!-- TABELA DE TOTAIS  -->
                            <table class="table table-sm o_main_table" style="font-size: 12px; width: 100%; margin-top: -5px;">
                                <tbody>
                                    <tr style="font-weight: bold; border-top: 2px solid #000;">
                                        <td class="text-center" style="width: 20%;"></td>
                                        <td class="text-center" style="width: 20%;">Totais:</td>
                                        <td class="text-end" style="width: 20%;">
                                            <span t-out="o.amount_format(data['total_debit'])"/>
                                        </td>
                                        <td class="text-end" style="width: 20%;">
                                            <span t-out="o.amount_format(data['total_credit'])"/>
                                        </td>
                                        <td class="text-end" style="width: 20%;">
                                            <span t-out="o.amount_format(data['total_debit'] - data['total_credit'])"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <!-- Assinaturas -->
                            <div class="row">
                                <div class="col-6">
                                    <p align="center">Processado por</p>
                                    <p align="center">__________________________________</p>
<!--                                    <p align="center" t-field="o.create_uid"/>-->
                                </div>
                                <div class="col-6">
                                    <p align="center">Aprovado por</p>
                                    <p align="center">__________________________________</p>
                                </div>
                            </div>
                        </div>

                        <!-- Rodapé -->
                        <div class="footer">
                            <div class="text-center" style="font-size:10px">
                                <b>©TIS </b>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
