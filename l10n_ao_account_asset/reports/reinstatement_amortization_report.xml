<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_landscape" model="report.paperformat">
        <field name="name">Landscape A4</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <record id="reinstatement_amortization_report" model="ir.actions.report">
        <field name="name">Mapa de Reintegrações e Amortizações</field>
        <field name="model">reinstatement.amortization.report.wizard</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">l10n_ao_account_asset.reinstatement_amortization</field>
        <field name="report_file">l10n_ao_account_asset.reinstatement_amortization</field>
        <field name="paperformat_id" ref="l10n_ao_account_asset.paperformat_landscape" />
    </record>

    <record id="reinstatement_amortization_report_pdf" model="ir.actions.report">
        <field name="name">Mapa de Reintegrações e Amortizações</field>
        <field name="model">reinstatement.amortization.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ao_account_asset.reinstatement_amortization</field>
        <field name="report_file">l10n_ao_account_asset.reinstatement_amortization</field>
        <field name="paperformat_id" ref="l10n_ao_account_asset.paperformat_landscape" />
    </record>

</odoo>
