<odoo>

    <record id="l10n_ao_retention_map_wizard_view" model="ir.ui.view">
        <field name="name">l10n_ao.retention.map.wizard.view</field>
        <field name="model">wizard.retention.map</field>
        <field name="arch" type="xml">
            <form string="Formulário para geração do SAFT">
                <group>
                    <field name="month" required="1" />
                    <field name="year" required="1" />
                </group>
                <group>
                    <field name="url_download" readonly="1" invisible="1" widget="url"/>
                </group>
                <footer>
                    <button name="print_report" string="Imprimir" type="object" class="print btn-primary" data-hotkey="q"/>
                    <button name="print_report_xlsx" string="GERAR XLSX"
                        type="object" class="oe_highlight"
                        attrs="{'invisible':[('url_download', '!=', False)]}"/>
                    <button name="action_download_retention_map_file" string="SALVAR XLSX"
                        type="object" class="oe_highlight"
                        attrs="{'invisible':[('url_download', '=', False)]}"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="l10n_ao_retention_map_wizard_action" model="ir.actions.act_window">
        <field name="name">Mapa de Retenção</field>
        <field name="res_model">wizard.retention.map</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_l10n_ao_retention_map"
        sequence="40"
        name="Mapa de Retenção"
        parent="l10n_ao.menu_saft_register_ao"
        action="l10n_ao.l10n_ao_retention_map_wizard_action"
    />

</odoo>