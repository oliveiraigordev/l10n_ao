        <record model="ir.actions.act_window" id="action_vat_tree_view">
            <field name="name">VAT Settlement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.vat.tax</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="account_tax_vat_menu" name="VAT Management" parent="menu_saft_register_ao" sequence="2"/>
        <menuitem id="account_vat_management_menu" name="VAT Settlements" parent="account_tax_vat_menu"
                  action="action_vat_tree_view"/>
    </data>
</odoo>