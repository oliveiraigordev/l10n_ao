<odoo>
    <record id="l10n_ao_sale_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='quotation_order_setting_container']/div[@id='sale_config_online_confirmation_sign']"
                   position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="l10n_ao_sale_doc_type">
                    <div class="o_setting_right_pane">
                        <label for="document_type_id"/>
                        <div class="text-muted">
                            Default document type used by sales order
                        </div>
                        <field name="document_type_id" options="{'no_open':True,'no_create': True}"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='auth_signup_documents']/div[@class='o_setting_right_pane']"
                   position="after">
                <div class="o_setting_left_pane mt8">
                    <field name="margin_cost"/>
                </div>
                <div class="o_setting_right_pane mt8">
                    <label for="margin_cost"/>
                    <div class="text-muted">
                        Adicionar margem de lucro sobre o pre√ßo de venda
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>