<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-buttons')]" position="replace">
        <div class="payment-buttons">
            <div class="partner-button">
                                <div class="button" t-att-class="{ highlight: currentOrder.get_partner() }"
                                     t-on-click="selectPartner">
                                    <i class="fa fa-user" role="img" title="Customer"/>
                                    <t t-set="partner" t-value="currentOrder.get_partner()"/>
                                    <span>
                                        <t t-if="partner">
                                            <t t-esc="partner.name"/>
                                        </t>
                                        <t t-if="!partner">
                                            Customer
                                        </t>
                                    </span>
                                </div>
                            </div>
            <div class="payment-controls">
                                <div class="button js_invoice"
                                     t-att-class="{ highlight: currentOrder.is_to_invoice() }"
                                     t-on-click="toggleIsToInvoice">
                                    <i class="fa fa-file-text-o"/>
                                    Invoice
                                </div>
             </div>
        </div>
        </xpath>
    </t>

</templates>