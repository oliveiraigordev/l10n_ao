<odoo>
  <record id="view_partial_salary_payment_wizard_form" model="ir.ui.view">
    <field name="name">partial.salary.payment.wizard.form</field>
    <field name="model">partial.salary.payment.wizard</field>
    <field name="arch" type="xml">
      <form string="Pagamento">
        <group>
          <field name="salary_payment_id" invisible="1"/>
          <field name="amount_to_pay"/>
          <field name="total_amount"/>
          <field name="partial_paid_total"/>
          <field name="remaining_amount"/>
        </group>
        <footer>
          <button string="Confirmar Pagamento" type="object" name="confirm_partial_payment" class="btn-primary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
