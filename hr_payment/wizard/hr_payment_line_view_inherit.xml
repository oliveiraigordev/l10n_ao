<odoo>
  <record id="view_hr_payment_form_inherit_partial" model="ir.ui.view">
    <field name="name">hr.payment.partial.form</field>
    <field name="model">hr.payment</field>
    <field name="inherit_id" ref="hr_payment.view_hr_payment_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_open_partial_payment_wizard"
                string="Registrar Pagamento Parcial"
                type="object"
                class="btn-primary"
                attrs="{'invisible': [('state', '=', 'posted')]}"/>
      </xpath>
    </field>
  </record>
</odoo>
