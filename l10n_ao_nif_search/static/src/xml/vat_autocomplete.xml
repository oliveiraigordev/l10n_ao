<templates xml:space="preserve">
    <t t-name="l10n_ao_nif_search.VatAutocomplete" owl="1">
        <div class="o_field_vat_autocomplete dropdown position-relative">
            <input type="text"
                   t-on-input="onInputHandler"
                   class="o_input form-control"
                   autocomplete="off"/>

            <ul class="dropdown-menu show"
                t-if="state.suggestions.length"
                style="position:absolute; top:100%; left:0; z-index:1000; width:100%; max-height:200px; overflow-y:auto;">
                
                <li t-foreach="state.suggestions" t-as="s" t-key="s.id"
                    class="border-bottom py-2 px-3">
                    <a t-on-click="() => selectSuggestion(s)" 
                       class="dropdown-item px-0">
                        <div class="fw-bold"><t t-esc="s.vat"/></div>
                        <small class="text-muted"><t t-esc="s.name"/></small>
                    </a>
                </li>
            </ul>
        </div>
    </t>
</templates>