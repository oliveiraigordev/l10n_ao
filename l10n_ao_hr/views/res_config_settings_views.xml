<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_ao_hr_res_company_view_form" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit.l10n_ao_hr</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="company_registry" position="after">
                <field name="company_security_number"/>
            </field>
        </field>
    </record>

    <record id="l10n_ao_hr_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_ao_hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="hr_payroll_accountant" position="after">
                <field name="account_fiscal_country_id" invisible="1"/>
