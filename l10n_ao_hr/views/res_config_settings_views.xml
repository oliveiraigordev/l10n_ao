                <div attrs="{'invisible':[('account_fiscal_country_id','!=',%(base.ao)d)]}"
                     class="row mt16 o_settings_container" id="close_date_payroll">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Close Date</span>
                            <div class="text-muted">
                                Salary Processing End Date
                            </div>
                            <div class="content-group">
                                <field name="close_date_payroll" class="o_light_label mt16" readonly="0"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div attrs="{'invisible':[('account_fiscal_country_id','!=',%(base.ao)d)]}"
                     class="row mt16 o_settings_container" id="l10n_ao_hr_payroll">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="show_paid_usd" readonly="0" widget="boolean_toggle"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_paid_usd" string="Show paid amount in USD in the Payslip"/>
                            <div class="text-muted">
                                Will allow to manage currency rate and display a counter currency amount int he Payslip
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="rate_date"
                         title="How the exchange rate is calculated."
                         attrs="{'invisible': [('show_paid_usd', '=', False)]}">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Rate Date</span>
                            <span class="fa fa-lg fa-building-o" title="valor do cambio do dia."
                                  aria-label="Cabio do fecho da folha Salarial." groups="base.group_multi_company"
                                  role="img"/>
                            <div class="text-muted">
                                How the exchange rate is calculated
                            </div>
                            <div class="content-group">
                                <field name="rate_date_at" class="o_light_label mt16" widget="radio" readonly="0"/>
                            </div>
                        </div>
                    </div>
                </div>

