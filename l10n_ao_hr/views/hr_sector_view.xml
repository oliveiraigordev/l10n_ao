<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_sector_form_view" model="ir.ui.view">
        <field name="name">HR -Sector Form View</field>
        <field name="model">hr.sector</field>
        <field name="arch" type="xml">
            <form string="Sector">
                <sheet>
                    <div class="oe_title" name="title">
                        <h2>
                            <field name="name"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="department_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_sector_tree_view" model="ir.ui.view">
        <field name="name">HR - Sector Form View Tree</field>
        <field name="model">hr.sector</field>
        <field name="arch" type="xml">
            <tree string="Sector" sample="1" multi_edit="1" expand="context.get('expand', False)">
                <field name="name"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_sector" model="ir.actions.act_window">
        <field name="name">Sector</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.sector</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>