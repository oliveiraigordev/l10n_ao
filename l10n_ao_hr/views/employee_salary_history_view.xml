<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_salary_history_tree_view" model="ir.ui.view">
        <field name="name">HR - employee_salary_history View Tree</field>
        <field name="model">employee.salary.history</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="set_active" widget="boolean_toggle" readonly="1"/>
                <field name="contract_id" readonly="1" options="{'no_create': True}"/>
                <field name="currency_id" invisible="1"/>
                <field name="job_id" invisible="1"/>
                <field name="date"/>
                <field name="amount" options="{'currency_field': 'currency_id'}"/>
                <field name="note"/>
                <button name="update_contract_salary" type="object" string="Set Default"
                        class="oe_highlight" attrs="{'invisible': [('set_active', '=', True)]}"/>
            </tree>
        </field>
    </record>

    <record id="action_employee_salary_history" model="ir.actions.act_window">
        <field name="name">Employee Salary History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.salary.history</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="employee_salary_history_tree_view"/>
    </record>

</odoo>