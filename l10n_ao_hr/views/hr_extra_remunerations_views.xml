<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_extra_remuneration_code_form_view" model="ir.ui.view">
        <field name="name">HR Payroll- Remuneration Code Form View</field>
        <field name="model">hr.extra.remuneration.code</field>
        <field name="arch" type="xml">
            <form string="Remuneration Codes">
                <sheet>
                    <div class="oe_title" name="title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
                            <field name="code"/>
                        </h2>
                    </div>
                    <group col="4">
                        <field name="type"/>
                        <field name="company_id" groups="base.group_multi_company" widget="many2one_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_extra_remuneration_code_tree_view" model="ir.ui.view">
        <field name="name">HR Payroll- Remuneration Code Form View Tree</field>
        <field name="model">hr.extra.remuneration.code</field>
        <field name="arch" type="xml">
            <tree string="Remuneration Codes" sample="1" multi_edit="1" expand="context.get('expand', False)">
                <field name="code"/>
                <field name="name"/>
                <field name="type"/>
                <field name="company_id" groups="base.group_multi_company" widget="many2one_tags"/>
            </tree>
        </field>
    </record>

    <record id="hr_extra_remuneration_code_kanban_view" model="ir.ui.view">
        <field name="name">HR Payroll- Remuneration Code Form View Kanban</field>
        <field name="model">hr.extra.remuneration.code</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_remuneration_code" sample="1">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-6">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="col-6">
                                    <span class="float-end badge text-bg-secondary">
                                        <field name="code"/>
                                    </span>
                                </div>
                                <div class="col-12">
                                    <span>
                                        <field name="type"/>
                                    </span>
                                </div>
                                <div class="col-12">
                                    <span>
                                        <field name="company_id"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="action_hr_extra_remuneration_codes" model="ir.actions.act_window">
        <field name="name">List of Extra Remunerations Codes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.extra.remuneration.code</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

</odoo>
