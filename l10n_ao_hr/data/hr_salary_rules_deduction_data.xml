        <record id="l10n_ao_hr_salary_rule_desconto_danos" model="hr.salary.rule">
            <field name="name">Desconto por Danos</field>
            <field name="code">DANO</field>
            <field eval="140" name="sequence"/>
            <field eval="1" name="appears_on_payslip"/>
            <field name="condition_select">python</field>
            <field name="amount_select">code</field>
            <field eval="1" name="active"/>
            <field name="struct_id" ref="l10n_ao_hr.l10n_ao_hr_payroll_salary_structure_base"/>
            <field name="condition_python">
                <![CDATA[
res=False
for rem in contract.remuneration_ids:
    if rem.remuneration_code_id.code == "DES_DANOS" and rem.date_start <= payslip.date_to:
        if not rem.date_end or rem.date_end >= payslip.date_to:
            res=True
result = res
				]]>
            </field>
            <field name="amount_python_compute">
                <![CDATA[
res=0.0
for rem in contract.remuneration_ids:
    if rem.remuneration_code_id.code == "DES_DANOS" and rem.date_start <= payslip.date_to:
        if not rem.date_end or rem.date_end >= payslip.date_to:
            res += rem.amount
result = res * -1
				]]>
            </field>
            <field name="category_id" ref="hr_payroll.DED"/>
        </record>

