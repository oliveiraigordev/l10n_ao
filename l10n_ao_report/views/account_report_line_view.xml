<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="l10n_ao_account_report_line_form" model="ir.ui.view">
        <field name="name">account.report.line.inherit</field>
        <field name="model">account.report.line</field>
        <field name="inherit_id" ref="account_reports.account_report_line_form"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="default_name"/>
                <field name="note"/>
                <field name="active_account_move"/>
            </field>
        </field>
    </record>

    <record id="view_cash_flow_tree" model="ir.ui.view">
        <field name="name">cash.flow.statement.tree</field>
        <field name="model">account.payment.report.line.register</field>
        <field name="arch" type="xml">
            <tree string="Fluxo de Caixa">
                <field name="line_cashflow" invisible="1"/>
                <field name="cash_flow_statement_id" string="Rubrica de Fluxo de Caixa"/>
                <field name="cash_flow_statement_line_id" attrs="{'invisible': [('line_cashflow', '=', False)]}"/>
                <field name="amount" string="Valor"/>
            </tree>
        </field>
    </record>

    <record id="view_cash_flow_line_tree" model="ir.ui.view">
        <field name="name">cash.flow.statement.line.tree</field>
        <field name="model">account.payment.report.line</field>
        <field name="arch" type="xml">
            <tree string="Fluxo de Caixa">
                <field name="line_cashflow" invisible="1"/>
                <field name="cash_flow_statement_id" string="Rubrica de Fluxo de Caixa"/>
                <field name="cash_flow_statement_line_id"  attrs="{'invisible': [('line_cashflow', '=', False)]}"/>
                <field name="amount" string="Valor"/>
            </tree>
        </field>
    </record>
</odoo>