<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="l10n_ao_report.L10nAOCashFlowMapListRenderer" t-inherit="web.ListRenderer"
       t-inherit-mode="primary" owl="1">

        <xpath expr="//div[hasclass('o_list_renderer')]/table/tbody/t[@t-call='{{ constructor.rowsTemplate }}']"
               position="after">
            <t t-if="state.showInitialBalance">

                <!-- BLANK LINE -->
                <tr id="in_coming_balance" class="o_data_row" data-id="datapoint_000">
                    <td class="o_list_record_selector"></td>
                    <td></td>
                    <td colspan="50%" class="o_data_cell cursor-pointer o_field_cell o_list_char">.</td>
                </tr>

                <!-- IN Total Periodo CASH LINE -->
                <tr id="in_period_total_balance" class="o_data_row" data-id="datapoint_001">
                    <td class="o_list_record_selector"></td>
                    <td></td>
                    <td></td>
                    <td colspan="0" class="o_data_cell cursor-pointer o_field_cell o_list_char"
                        style="font-weight:bold">
                        Total do Per√≠odo
                    </td>
                    <td class="o_data_cell cursor-pointer o_field_cell o_list_number"
                        style="font-weight:bold; text-align: right;" t-esc="state.debit_init_total_balance"/>
                    <td class="o_data_cell cursor-pointer o_field_cell o_list_number"
                        style="font-weight:bold; text-align: right;" t-esc="state.credit_init_total_balance"/>
                    <td class="o_data_cell cursor-pointer o_field_cell o_list_number"
                        style="font-weight:bold; text-align: right;" t-esc="state.amount_init_total_balance"/>

                </tr>
                <!-- OUT COMING CASH LINE -->
                <tr id="in_period_total_balance" class="o_data_row" data-id="datapoint_001">
                    <td class="o_list_record_selector"></td>
                    <td></td>
                    <td></td>
                    <td colspan="0" class="o_data_cell cursor-pointer o_field_cell o_list_char"
                        style="font-weight:bold">
                        Total Acumulado
                    </td>
                    <td class="o_data_cell cursor-pointer o_field_cell o_list_number"
                        style="font-weight:bold; text-align: right;" t-esc="state.debit_accumulated_total_balance"/>
                    <td class="o_data_cell cursor-pointer o_field_cell o_list_number"
                        style="font-weight:bold; text-align: right;" t-esc="state.credit_accumulated_total_balance"/>
                    <td class="o_data_cell cursor-pointer o_field_cell o_list_number"
                        style="font-weight:bold; text-align: right;" t-esc="state.amount_accumulated_total_balance"/>

                </tr>

            </t>

        </xpath>
    </t>
</templates>