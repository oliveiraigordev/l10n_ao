<odoo>

    <record id="l10n_ao_customer_invoice_wizard" model="ir.ui.view">
        <field name="name">l10n_ao.customer.invoice.wizard.view</field>
        <field name="model">wizard.customer_invoice</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_start" required="1" />
                    </group>
                    <group>
                        <field name="date_end" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report" string="GERAR PDF" type="object" class="print btn-primary" data-hotkey="q"/>
                    <button name="print_excel_report" string="GERAR XLSX" type="object" class="oe_highlight"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="l10n_ao_report_customer_invoice" model="ir.actions.act_window">
        <field name="name">Resumo de facturação de venda</field>
        <field name="res_model">wizard.customer_invoice</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_l10n_ao_report_wizard_customer_invoice"
        sequence="40"
        name="Resumo de factura"
        parent="account_reports.account_reports_partners_reports_menu"
        action="l10n_ao_report_customer_invoice"
    />

</odoo>