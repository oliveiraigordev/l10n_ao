<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="view_stock_move_extract_wizard"
            model="ir.ui.view">
            <field name="name">stock.move.extract.wizard.form</field>
            <field name="model">stock.move.extract.wizard</field>
            <field name="arch"
                type="xml">
                <form string="Extracto de Movimento de Stock">
                    <group>
                        <field name="product_ids"
                            widget="many2many_tags"
                            options="{'no_create': True}" />
                        <field name="product_type" />
                        <field name="location_ids"
                            widget="many2many_tags"
                            options="{'no_create': True}" />
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="file_data"
                            invisible="1" />
                    </group>
                    <footer>
                        <button name="print_report_xlsx"
                            string="Gerar XLSX"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible':[('file_data', '!=', False)]}" />
                        <button name="action_download_report"
                            string="Baixar XLSX"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible':[('file_data', '=', False)]}" />
                        <button string="Cancel"
                            class="btn-secondary"
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stock_move_extract_wizard"
            model="ir.actions.act_window">
            <field name="name">Extracto de Movimento de Stock</field>
            <field name="res_model">stock.move.extract.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_stock_move_extract_wizard"
            id="stock_move_extract_report_menu"
            parent="stock.menu_warehouse_report"
            sequence="20" />

    </data>

</odoo>
