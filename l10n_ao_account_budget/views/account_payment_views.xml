<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account payment form view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="l10n_ao_report.l10n_ao_report_account_payment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='account_payment_report_line_ids']/tree/field[@name='amount']"
                   position="before">
                <field name="account_code"/>
            </xpath>

        </field>
    </record>


</odoo>