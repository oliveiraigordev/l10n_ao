<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_cash_flow_statement_form_view_inherit" model="ir.ui.view">
        <field name="name">L10N - Cash Flow Statement Form View</field>
        <field name="model">cash.flow.statement</field>
        <field name="inherit_id" ref="l10n_ao_report.l10n_cash_flow_statement_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@id='cash_flow_statement_line']/field/tree/field[@name='code']"
                   position="after">
                <field name="account_id"/>
            </xpath>
        </field>
    </record>

</odoo>
