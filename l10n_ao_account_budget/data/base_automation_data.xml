<odoo>
    <data>
        <record id="update_account_budget_lines" model="base.automation">
            <field name="name">Update Account Budget Lines From Account Move</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="trigger">on_create_or_write</field>
            <field name="active" eval="True"/>
            <field name="trigger_field_ids"
                   eval="[(6, 0,
                   [
                    ref('account.field_account_move__state'),
                    ref('account.field_account_move__amount_residual'),
                    ref('account.field_account_move__payment_state'),
                    ref('account.field_account_move__payment_reference')
                   ])]"/>
            <field name="code">
            for rec in records:
                rec.update_account_budget()
            </field>
        </record>
    </data>
</odoo>