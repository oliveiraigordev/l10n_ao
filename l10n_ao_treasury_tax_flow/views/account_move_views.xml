<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_view_move_form_inherited" model="ir.ui.view">
        <field name="name">treasury.view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                    <field name="is_iac_payment" invisible="1" />
            </field>
            <field name="journal_id" position="attributes">
                <attribute name="attrs">{'invisible': [('is_iac_payment', '=', True)]}</attribute>
            </field>
            <field name="date" position="after">
                <field name="journal_id" attrs="{'invisible': [('is_iac_payment', '!=', True)]}"/>
            </field>
        </field>
    </record>


    <record id="action_iac_payment" model="ir.actions.act_window">
        <field name="name">Pagamento IAC</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form</field>
        <field name="domain">[('is_iac_payment', '=', True)]</field>
        <field name="context">{'default_is_iac_payment': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create
            </p><p>
            ""
            </p>
        </field>
    </record>

    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">view invoice tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_state']" position="attributes">
                <attribute name="decoration-success">payment_state == 'paid'</attribute>
                <attribute name="decoration-info">payment_state == 'reversed'</attribute>
            </xpath>
        </field>
    </record>

</odoo>
